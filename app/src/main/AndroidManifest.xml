<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pouillcorp.oukelegare">
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <application android:hardwareAccelerated="true"
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/placeholder64"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/placeholder64"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.pouillcorp.oukelegare.activities.AccueilActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.pouillcorp.oukelegare.activities.ajouter.AjouterLieuActivity"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"/>
        <activity android:name="com.pouillcorp.oukelegare.activities.ajouter.AjouterLieuEnregistreActivity"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"/>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-4063990686626392~7041425969"/>
    </application>

</manifest>